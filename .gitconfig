[core]
    autocrlf = input
    excludesFile = ~/.gitignore
    pager = bat
    symlinks = true
[init]
    defaultBranch = main
[pull]
    rebase = true
[rebase]
    autoStash = true
[include]
    path = ~/.gitconfig_local
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
